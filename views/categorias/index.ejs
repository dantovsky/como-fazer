<%- include('../header') %>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <a href="/categorias/nova" class="btn btn-success btn-sm">Add nova categoria</a>
            <a href="/publicacoes/nova" class="btn btn-success btn-sm">Add nova publicação</a><br><br>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Categoria</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categorias.forEach(categoria => { %>
                    <tr>
                        <th scope="row">
                            <!-- navegando sobre os documento JSON -->
                            <a href="/publicacoes/categoria/<%= categoria.id %>"><%= categoria.categoria %></a>
                        </th>
                        <td>
                            <a href="/categorias/editar/<%= categoria.id %>" class="btn btn-info btn-sm">Editar</a>
                            <a href="/categorias/excluir/<%= categoria.id %>" class="btn btn-light btn-sm">Excluir</a> <br />
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../footer') %>